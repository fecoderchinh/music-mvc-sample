<!-- Modal -->
<div class="modal fade emz-modal" id="modalProfileAdd" tabindex="-1" aria-labelledby="modalProfileAddLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm địa chỉ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <div class='modal-body__content'>
                    {% render 'paths/form-profile-add' %}
                </div>
            </div>
            <div class="modal-footer">
                <div class='me-auto emz-form'>
                    <input class="form-check-input emz-form rounded-pill mt-0" type="checkbox" value="" id="modalProfileAddCheckbox" checked>
                    <label for='modalProfileAddCheckbox' class='ms-2 emz-form__label'>Đặt làm địa chỉ mặc định</label>
                </div>
                <button type="button" class="emz-button btn btn-outline__gray btn-size__sm btn__text-gray" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="emz-button btn btn-size__sm btn-fill__red btn__text-white">Lưu</button>
            </div>
        </div>
    </div>
</div>
