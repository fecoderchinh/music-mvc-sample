{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@emzmono/common/*": ["apps/emzmono/src/common/*"],
      "@emzmono/*": ["apps/emzmono/src/*"],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}